<body>
  <div class="container">
    <div class="header-div">
      <h1 class="header-text">Adicionando Bot</h1>
    </div>
    <div class="info-div">
      <div class="bot-idText">
        <form method="post">
          <p class="blue-text">Library <spam class="important">*</spam></p><br>
          <p class="text-fix">Escolha á library. </p>
          <select class="form-control fix upper-desc fix-select" name="library">
             <option value>Escolha uma</option>
             <option value="Discord.js">Discordjs</option>
             <option value="Discord.py">Discordpy</option>
             <option value="Discord.go">Discordgo</option>
          </select>
          <div class="line"></div>
          
          <label for="id" class="blue-text">Bot ID <spam class="important">*</spam></label>
          <input class="form-control fix" type="text" id="id" name="id" maxlength="20" placeHolder="123456789123456789">
          <p class="text-fix">Pegue o id no <a href="discord.com/developers" class="blue-text">portal</a></p>
          
          <div class="line"></div>
          <label for="prefix" class="blue-text">Prefixo <spam class="important">*</spam></label>
          <input class="form-control fix" type="text" id="prefix" name="prefix" maxlength="20" placeHolder="!">
          <p class="text-fix">O prefixo que o seu bot responde</p>
          
          <div class="line"></div>
          <label for="siteURL" class="blue-text">Site URL</label>
          <input class="form-control fix" type="text" id="siteURL" name="siteURL" maxlength="50" placeHolder="https://sitelegal.com/">
          <p class="text-fix">Site do bot, não obrigatorio</p>
          
          <div class="line"></div>
          <label for="descMIN" class="blue-text">Sobre <spam class="important">*</spam></label>
          <input class="form-control fix" type="text" id="descMIN" name="descMIN" maxlength="74" placeHolder="Um bot de moderação simples e facil">
          <p class="text-fix">Descrição pequena <span class="blue-text bold">MAX 74</span></p>
          
          <div class="line"></div>
          <label for="desc" class="blue-text" style="margin-bottom: 2% !important;">Sobre <spam class="important">*</spam></label>
          <p class="text-fix" style="margin-bottom: -4%;">Descrição completa do seu bot. <span class="blue-text bold">MIN 1300</span></p>
          <textarea name="desc" class="coment_input" minlength="5" required="" placeholder="Qual descrição?"></textarea>
          
          <div class="line"></div>
          <button type="submit" onclick="window.location.href='/premium" disabled class="btn btn-primary" id="foudas" style="border: 1px;">Confirmar</button>
      </form>
      </div>
    </div>
  </div>
  
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" integrity="sha512-bLT0Qm9VnAYZDflyKcBaQ2gg0hSYNQrJ8RilYldYQ1FxQYoCLtUjuuRuZo+fjqhx/qtq/1itJ0C2ejDxltZVFg==" crossorigin="anonymous"></script>
  <script>
    setInterval(() => {
      if ($("#id").val().length >= 18){
        $("#foudas").prop("disabled", false);
      } else {
        $("#foudas").prop("disabled", true);
      };
      
      if ($("#prefix").val().length >= 1) {
        $("#foudas").prop("disabled", false);
      } else {
        $("#foudas").prop("disabled", true);
      };
      
      if ($("#descMIN").val().length >= 10) {
        $("#foudas").prop("disabled", false);
      } else {
        $("#foudas").prop("disabled", true);
      };
      
      if ($("#desc").val().length >= 1300) {
        $("#foudas").prop("disabled", false);
      } else {
        $("#foudas").prop("disabled", true);
      };
    }, 100)
  </script>
</body>